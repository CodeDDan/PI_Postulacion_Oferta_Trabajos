@model PI_Postulacion_Oferta_Trabajos.Controllers.UserViewModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>@Model.Usuario.UsuNombre @Model.Usuario.UsuApellido</h4>
    <dl class="row">
        <dt class="col-sm-2">Nombre:</dt>
        <dd class="col-sm-10">@Model.Usuario.UsuNombre</dd>

        <dt class="col-sm-2">Apellido:</dt>
        <dd class="col-sm-10">@Model.Usuario.UsuApellido</dd>

        <dt class="col-sm-2">Cédula:</dt>
        <dd class="col-sm-10">@Model.Usuario.UsuCedula</dd>

        <dt class="col-sm-2">Email:</dt>
        <dd class="col-sm-10">@Model.Usuario.Email</dd>

        <dt class="col-sm-2">Teléfono:</dt>
        <dd class="col-sm-10">@Model.Usuario.PhoneNumber</dd>

        <dt class="col-sm-2">Roles:</dt>
        <dd class="col-sm-10">@Model.Roles</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Usuario.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
