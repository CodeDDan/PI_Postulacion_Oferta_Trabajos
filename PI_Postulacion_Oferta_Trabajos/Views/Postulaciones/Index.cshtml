@model IEnumerable<PI_Postulacion_Oferta_Trabajos.Models.Postulacion>

@{
    ViewData["Title"] = "Postulaciones";
}

<h1 class="text-center">@ViewData["Title"] <i class="bi bi-file-earmark-person-fill"></i></h1>

<!-- Botón para crear nueva postulación -->
<p>
    <a asp-action="Create" class="btn btn-custom btn-lg mb-3">
        <i class="bi bi-plus-circle-fill"></i> Crear Nueva Postulación
    </a>
</p>

<!-- Tabla de postulaciones -->
<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Fecha de Postulación</th>
                    <th>Estado</th>
                    <th>Oferta</th>
                    <th>Usuario</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PosFechaPostulacion)</td>

                        <!-- Mostrar el nombre del estado de la postulación -->
                        <td>@Html.DisplayFor(modelItem => item.Esp.EspNombre)</td>

                        <!-- Mostrar el título de la oferta -->
                        <td>@Html.DisplayFor(modelItem => item.Ofe.OfeTitulo)</td>

                        <!-- Mostrar el email o nombre de usuario -->
                        <td>@Html.DisplayFor(modelItem => item.Usu.UserName)</td>

                        <td class="text-center">
                            <!-- Botones de acción con iconos -->
                            <a asp-action="Edit" asp-route-id="@item.PosId" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.PosId" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.PosId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    .btn-outline-warning, .btn-outline-info, .btn-outline-danger {
        margin-right: 5px;
    }

    .table {
        font-size: 1.1rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table-dark th {
        background-color: #343a40;
        color: #fff;
    }
</style>
