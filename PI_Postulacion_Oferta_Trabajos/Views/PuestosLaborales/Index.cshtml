@model IEnumerable<PI_Postulacion_Oferta_Trabajos.Models.PuestoLaboral>

@{
    ViewData["Title"] = "Puestos Laborales";
}

<h1 class="text-center">@ViewData["Title"] <i class="bi bi-briefcase-fill"></i></h1>

<!-- Botón para crear nuevo puesto laboral -->
<p>
    <a asp-action="Create" class="btn btn-custom btn-lg mb-3">
        <i class="bi bi-plus-circle-fill"></i> Crear Nuevo Puesto
    </a>
</p>

<!-- Tabla de puestos laborales -->
<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Nombre del Puesto</th>
                    <th>Área Laboral</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PulNombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Arl.ArlNombre)</td>
                        <td class="text-center">
                            <!-- Botones de acción con iconos -->
                            <a asp-action="Edit" asp-route-id="@item.PulId" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.PulId" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.PulId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    .btn-outline-warning, .btn-outline-info, .btn-outline-danger {
        margin-right: 5px;
    }

    .table {
        font-size: 1.1rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table-dark th {
        background-color: #343a40;
        color: #fff;
    }
</style>
