@model IEnumerable<PI_Postulacion_Oferta_Trabajos.Models.OfertaModalidad>

@{
    ViewData["Title"] = "Modalidades de Oferta";
}

<h1 class="mb-4 text-center">@ViewData["Title"] <i class="bi bi-briefcase"></i></h1>

<!-- Botón para crear nueva modalidad -->
<p>
    <a asp-action="Create" class="btn btn-custom btn-lg mb-3">
        <i class="bi bi-plus-circle-fill"></i> Crear Nueva Modalidad
    </a>
</p>

<!-- Tabla de modalidades -->
<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">Nombre de la Modalidad</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@Html.DisplayFor(modelItem => item.OfmNombre)</td>
                        <td class="text-center">
                            <!-- Botones de acción con iconos -->
                            <a asp-action="Edit" asp-route-id="@item.OfmId" class="btn btn-outline-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.OfmId" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.OfmId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    .btn-primary {
        background-color: #007bff;
        color: white;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-outline-warning {
        border-color: #ffc107;
        color: #ffc107;
    }

        .btn-outline-warning:hover {
            background-color: #ffc107;
            color: white;
        }

    .table {
        font-size: 1.1rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table-dark th {
        background-color: #343a40;
        color: #fff;
    }
</style>
