@model IEnumerable<PI_Postulacion_Oferta_Trabajos.Models.UsuarioDetalle>

@{
    ViewData["Title"] = "Index";
}
<style>
    /* General Styles */
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 0;
        padding: 0;
    }

    .container {
        margin: 50px auto;
        max-width: 900px;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    h1 {
        font-size: 24px;
        margin-bottom: 20px;
        color: #333;
    }

    form {
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

            .form-group input[type="submit"] {
                width: auto;
                background-color: #007bff;
                color: #fff;
                border: none;
                cursor: pointer;
                transition: background-color 0.3s ease;
            }

                .form-group input[type="submit"]:hover {
                    background-color: #0056b3;
                }

    .text-danger {
        color: #dc3545;
    }

    a {
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #0056b3;
        }

    /* Table Styles */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th, .table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f8f9fa;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
        }

</style>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UsdFechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsdEstadoCivil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsdFoto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsdCiudad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsdGenero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usu)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UsdFechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsdEstadoCivil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsdFoto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsdCiudad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsdGenero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usu.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UsdId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UsdId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UsdId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
