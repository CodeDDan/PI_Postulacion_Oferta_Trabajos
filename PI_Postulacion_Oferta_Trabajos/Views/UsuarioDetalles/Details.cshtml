        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsdFechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UsdEstadoCivil)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsdEstadoCivil)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UsdFoto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsdFoto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UsdCiudad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UsdCiudad)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UsdGenero)
        </dt>
        <dd class = "col-sm-10">
