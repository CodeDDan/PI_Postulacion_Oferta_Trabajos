@model IEnumerable<PI_Postulacion_Oferta_Trabajos.Models.Empresa>

@{
    ViewData["Title"] = "Empresas";
}

<h1 class="mb-4 text-center">@ViewData["Title"] <i class="bi bi-buildings-fill"></i></h1>

<!-- Botón para crear una nueva empresa -->
<p>
    <a asp-action="Create" class="btn btn-custom btn-lg mb-3">
        <i class="bi bi-plus-circle-fill"></i> Crear Nueva Empresa
    </a>
</p>

<!-- Tabla con las empresas -->
<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.EmpNombreEmpresa)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.EmpEmailRegistro)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.EmpRuc)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.EmpCiudad)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.EmpTelefono)
                    </th>
                    <th class="text-center">
                        @Html.DisplayNameFor(model => model.Aep.AepNombre)
                    </th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.EmpNombreEmpresa)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.EmpEmailRegistro)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.EmpRuc)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.EmpCiudad)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.EmpTelefono)
                        </td>
                        <td class="text-center">
                            @Html.DisplayFor(modelItem => item.Aep.AepNombre)
                        </td>
                        <td class="text-center">
                            <!-- Botones de acción con iconos de Bootstrap -->
                            <a asp-action="Edit" asp-route-id="@item.EmpId" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil-square"></i> Editar
                            </a>
                            <a asp-action="Details" asp-route-id="@item.EmpId" class="btn btn-outline-info btn-sm">
                                <i class="bi bi-info-circle"></i> Detalles
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.EmpId" class="btn btn-outline-danger btn-sm">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Estilos adicionales -->
<style>
    .btn-custom {
        background-color: #e90066;
        color: white;
    }

    .btn-custom:hover {
        background-color: #d2005b;
    }

    h1 {
        font-size: 2.5rem;
        color: #333;
    }

    .card {
        border-radius: 10px;
        border: none;
    }

    .table {
        font-size: 1.1rem;
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }

    .table-dark th {
        background-color: #343a40;
        color: #fff;
    }
</style>
