@page
@model LoginModel

@{
    ViewData["Title"] = "Ingreso";
}
<!-- Vincula la hoja de estilos -->
<link rel="stylesheet" href="~/css/custom-login.css">
<h1><i class="bi bi-person-circle"></i> @ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2>Usa tus credenciales para iniciar.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"><i class="bi bi-envelope-fill"></i> Email</i></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control my-2" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"><i class="bi bi-file-lock-fill"></i> Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <div class="form-check form-switch mt-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@
                            Recordarme
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-custom my-3">Ingresar</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarme como nuevo usuario</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar email de verificación</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <!-- Imagen -->
    <div class="col-md-8 ml-auto d-flex justify-content-center align-items-center mt-4">
        <img src="~/images/home-office-mujer-800x480.png" 
            class="img-fluid rounded mx-auto d-block"
             style="max-width: 700px; height: auto;"
            alt="Imagen de autenticación" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
